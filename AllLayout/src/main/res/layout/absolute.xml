<?xml version="1.0" encoding="utf-8"?>

<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <EditText android:id="@+id/AbsEditText" android:layout_width="200dp"
              android:layout_height="wrap_content" android:layout_x="12dp"
              android:layout_y="12dp" />
    <Button android:text="Submit" android:id="@+id/AbsSubmit"
            android:layout_width="100dp" android:layout_height="wrap_content"
            android:layout_x="220dp" android:layout_y="12dp" />

    <TextView android:id="@+id/absText" android:text="Print here"
              android:textSize="20sp"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_x="40dp"
              android:layout_y="100dp" />

</AbsoluteLayout>